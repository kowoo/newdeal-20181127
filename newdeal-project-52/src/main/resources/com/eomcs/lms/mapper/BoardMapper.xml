<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eomcs.lms.dao.BoardDao">

  
  <resultMap type="board" id="boardMap">
    <!-- pk는 태그명을 id로 해야된다. 나머지는 result.
	        이렇게 하면 쿼리문에 별명을 표기하지 않아도 됨!
	        기존 : select bno as no
	        별명 : select bno
     -->
    <id column="bno" property="no"/>
    <result column="cont" property="contents"/>
    <result column="cdt" property="createdDate"/>
    <result column="view" property="viewCount"/>
    <result column="mno" property="writerNo"/>
    <result column="lno" property="lessonNo"/>
    <association property="lesson" javaType="lesson">
      <id column="lno" property="no"/>
      <result column="title" property="title"/>
    </association>
    <association property="writer" javaType="member">
      <id column="mno" property="no"/>
      <result column="name" property="name"/>
    </association>
  </resultMap>
                      <!-- 위에서 만들어 놓은걸 이렇게 쓰는 것! resultType이 아니라 Map보이지? -->
	<select id="findAll" resultMap="boardMap">
		select
			bno,
			cont,
			cdt,
			view
			from board
	</select>
	<select id="findByNo" resultMap="boardMap" parameterType="int">
		select
			b.bno,
			b.cont,
			b.cdt,
			b.view,
			m.mno,
			m.name,
			l.lno,
			l.title
			from board b
			 join member m on b.mno=m.mno
			 join lesson l on b.lno=l.lno
		where bno=#{value}
	</select>
	<insert id="insert" parameterType="board">
    insert into board (cont,mno,lno)
    values (#{contents},#{writerNo},#{lessonNo})
	</insert>
	<update id="update" parameterType="board">
	  update board set
	   cont=#{contents}
	  where bno=#{no}
	</update>
	<delete id="delete" parameterType="int">
	  delete from board where bno=#{value}
	</delete>
</mapper>